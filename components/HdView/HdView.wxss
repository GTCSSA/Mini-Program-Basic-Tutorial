.header{
  width: 750rpx; 
  height: 90rpx;
}

.hdCon{
  display: flex;
  justify-content: space-between;
  height: 100%;
  align-items: center;
  padding: 0 26rpx;
}

.hdCon .logo, .hdCon .kefu{
  height: 50rpx;
}

.hdCon .hdPic{
  height: 100%;
}

.kefu{
  position: relative;
  animation: dh linear 1s infinite alternate;
}

.kefu .btn{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}